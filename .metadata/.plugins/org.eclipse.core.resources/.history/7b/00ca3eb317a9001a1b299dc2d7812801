
public class FabricaMecanicaDoJogo {
	
	EasyMode easy = new EasyMode ();
	
	public void retornaMecanicaDoJogo (int opcaoJogo, String palpite) {
		if (opcaoJogo == 1) {
			System.out.println(easy.mostraPalavraInvertida());
			easy.palpiteUsuario = palpite;
			if (easy.fimDoJogo()) {
				easy.mostraPontuacao();
			}
		
		}
		//else 
			//System.out.println(hard.mostraPalavraInvertida());
		
	}

}
