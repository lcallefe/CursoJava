import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Random;
import java.util.Scanner;

public class BancoDePalavras {
	
	
	File file = new File("C:\\Users\\LucianaCallefeDonadi\\Desktop\\listapalavras.txt"); 
	String palavra;
	ArrayList<String> palavras = lePalavrasArquivo ();
	
	@SuppressWarnings("resource")
	public ArrayList<String> lePalavrasArquivo () {
		
		
		try {
			Scanner sc;
			sc = new Scanner(file);
			while (sc.hasNextLine()) 
				palavras.add(palavra);
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} 

		
		return palavras;
	}
	
	public String retornaPalavraAleatoria () {
		Random aleatoria = new Random(palavras.size());
		palavra = palavras.get(aleatoria.nextInt());
		return palavra;
	}
	
	

}
