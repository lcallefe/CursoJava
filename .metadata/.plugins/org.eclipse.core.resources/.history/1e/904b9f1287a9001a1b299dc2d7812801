import java.util.Scanner;

public class Principal {
	
	

	public static void main(String[] args) {
		
		FabricaMecanicaDoJogo fabrica = new FabricaMecanicaDoJogo();
		int qtdeRodadas = fabrica.getTotalRodadas();
		
		for (int i=1; i<=qtdeRodadas;i++) {
			int op;
			String palpite;
			Scanner scan = new Scanner(System.in);
			
			System.out.println("\n Insira a opção do jogo: ");
			op = scan.nextInt();
			fabrica.mostraPalavraEmbaralhada(op);
			System.out.println("\n\r Qual o seu palpite? ");
	        palpite = scan.next();
	        fabrica.verificaPalpiteUsuario(palpite);
		}
        
        

	}


}
