import java.util.Scanner;

public class Principal {
	
	

	public static void main(String[] args) {
		
		int op = 1;
		String palpite;
		Scanner scan = new Scanner(System.in);
		FabricaMecanicaDoJogo fabrica = new FabricaMecanicaDoJogo();
		System.out.println("Insira a opção do jogo: /n ");
		op = scan.nextInt();
		fabrica.mostraPalavraEmbaralhada(op);
		System.out.println("Qual o seu palpite? /n ");
        palpite = scan.next();
        fabrica.verificaPalpiteUsuario(palpite);
        
        

	}


}
