import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Random;
import java.util.Scanner;

public class BancoDePalavras {
	
	
	static File file = new File("C:\\Users\\LucianaCallefeDonadi\\Desktop\\listapalavras.txt"); 
	static String palavra;
	static ArrayList<String> palavras = new ArrayList<String>();
	static int indicePalavra;
	
	@SuppressWarnings("resource")
	public static ArrayList<String> lePalavrasArquivo () {
		
		
		try {
			Scanner sc;
			sc = new Scanner(file);
			while (sc.hasNextLine()) {
				palavra = sc.nextLine();
				palavras.add(palavra);
			}
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} 

		
		return palavras;
	}
	
	public static String retornaPalavraAleatoria () {
		lePalavrasArquivo ();
		Random aleatoria = new Random();
		indicePalavra = aleatoria.nextInt(palavras.size()) + 1;
		String palavraAleatoria = palavras.get(indicePalavra);
		return palavraAleatoria;
	}
	
	

}
