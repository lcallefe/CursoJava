import java.util.ArrayList;

public class EasyMode implements MecanicaDoJogo {
	
	FabricaEmbaralhadores fabrica = new FabricaEmbaralhadores();
	ArrayList<String> listaPalavrasCorretas = fabrica.getPalavrasCorretas();
	int qtdeAcertos = 0;
	String palpiteUsuario;

	
	@Override
	public boolean acertou(String palpiteUsuario, int numeroDaRodada) {
		if (palpiteUsuario.contentEquals(listaPalavrasCorretas.get(numeroDaRodada - 1))) {
			qtdeAcertos++;
			return true;
		}
		return false;
	}

	@Override
	public boolean fimDoJogo (int numeroRodada) {
		if (qtdeAcertos!=2 || numeroRodada < listaPalavrasEmbaralhadas.size()) {
			acertou(palpiteUsuario, numeroRodada);
			return false;
		}
		mostraPontuacao();
		return true;
	}

	@Override
	public void mostraPontuacao() {
		System.out.println("Quantidade de acertos: " + qtdeAcertos);
	}

	@Override
	public String mostraPalavraInvertida(int numeroRodada) {
		return "Palavra embaralhada: " + listaPalavrasEmbaralhadas.get(numeroRodada-1);
	}

	
	

}
