import java.util.ArrayList;

public class FabricaEmbaralhadores {
	
	
	int qualFuncao = (int) ((Math.random() * ((2) + 1)) + 1); 
	BancoDePalavras banco = new BancoDePalavras();
	private String palavraCorreta;
	String palavraCorreta1 = banco.retornaPalavraAleatoria();
	String palavraCorreta2 = banco.retornaPalavraAleatoria();
	String palavraCorreta3 = banco.retornaPalavraAleatoria();
	String palavraCorreta4 = banco.retornaPalavraAleatoria();
	String palavraCorreta5 = banco.retornaPalavraAleatoria();
	String palavraCorreta6 = banco.retornaPalavraAleatoria();
	
	
	int qualPalavra = (int) ((Math.random() * ((5) + 1)) + 1); 
	private ArrayList<String> palavrasEmbaralhadas = new ArrayList<String>();
	int cont = 0;

	public void pegaPalavraAleatoriaDoBanco () {
		while (cont < banco.palavras.size()) {
			switch (qualPalavra) {
			case 1:
				setPalavraCorreta(palavraCorreta1);
				retornaFuncaoEmbaralhadora(palavraCorreta1);
				cont++;
		    case 2:
		    	setPalavraCorreta(palavraCorreta2);
		    	retornaFuncaoEmbaralhadora(palavraCorreta2);
		    	cont++; 	
		    case 3:
		    	setPalavraCorreta(palavraCorreta3);
		    	retornaFuncaoEmbaralhadora(palavraCorreta3);
		    	cont++;
		    case 4:
		    	setPalavraCorreta(palavraCorreta4);
		    	retornaFuncaoEmbaralhadora(palavraCorreta4);
		    	cont++;  	
		    case 5:
		    	setPalavraCorreta(palavraCorreta5);
		    	retornaFuncaoEmbaralhadora(palavraCorreta5);	
		    	cont++;
		    default:
		    	setPalavraCorreta(palavraCorreta6);
		    	retornaFuncaoEmbaralhadora(palavraCorreta6);	
			}
		
		}
		
	}
	
	public void retornaFuncaoEmbaralhadora (String palavraAEmbaralhar) {
		switch (qualFuncao)
		{
			case 1:
				StringInvertida str1 = new StringInvertida(palavraAEmbaralhar);
			    palavrasEmbaralhadas.add(str1.embaralhaPalavra());
			    cont++;
			case 2:
			    TrocaImparPorPar str2 = new TrocaImparPorPar(palavraAEmbaralhar);
			    palavrasEmbaralhadas.add(str2.embaralhaPalavra());
			    cont++;
			default:
			    EmbaralhaMetade str3 = new EmbaralhaMetade (palavraAEmbaralhar);
			    palavrasEmbaralhadas.add(str3.embaralhaPalavra());
			    cont++;
		}
		
		return palavrasEmbaralhadas;
	}

	public String getPalavraCorreta() {
		return palavraCorreta;
	}

	public void setPalavraCorreta(String palavraCorreta) {
		this.palavraCorreta = palavraCorreta;
	}

}

