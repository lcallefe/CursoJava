import java.util.Scanner;

public class Principal {
	
	

	public static void main(String[] args) {
		
		int op = 1;
		String palpite;
		Scanner scan = new Scanner(System.in);
		FabricaMecanicaDoJogo fabrica = new FabricaMecanicaDoJogo();
		System.out.println("\n Insira a opção do jogo: ");
		op = scan.nextInt();
		fabrica.mostraPalavraEmbaralhada(op);
		System.out.println("\n Qual o seu palpite? ");
        palpite = scan.next();
        fabrica.verificaPalpiteUsuario(palpite);
        
        

	}


}
