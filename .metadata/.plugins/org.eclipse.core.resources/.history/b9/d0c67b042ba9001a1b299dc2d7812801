import java.util.ArrayList;

public class EasyMode implements MecanicaDoJogo {
	
	FabricaEmbaralhadores fabrica = new FabricaEmbaralhadores();
	String palavraCorreta = fabrica.getPalavraCorreta();
	ArrayList<String> palavrasEmbaralhadas = fabrica.getPalavrasEmbaralhadas();
	int qtdeAcertos = 0;
	String palpiteUsuario;


	@Override
	public boolean acertou(String palpiteUsuario) {
		if (palpiteUsuario.contentEquals(palavraCorreta)) {
			qtdeAcertos++;
			return true;
		}
		return false;
	}

	@Override
	public boolean fimDoJogo (int numeroRodada) {
		if (qtdeAcertos!=2 || numeroRodada < palavrasEmbaralhadas.size()) {
			acertou(palpiteUsuario);
			return false;
		}
		mostraPontuacao();
		return true;
	}

	@Override
	public void mostraPontuacao() {
		System.out.println("Quantidade de acertos: " + qtdeAcertos);
	}

	@Override
	public String mostraPalavraInvertida(int numeroRodada) {
		return "Palavra embaralhada: " + palavrasEmbaralhadas.get(numeroRodada-1);
	}

	
	

}
